<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM2E2GRUPO5.Locaciones">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">
            
         

   


            <ListView x:Name="ListaLocaciones" ItemTapped="listviewSelect">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding descripcionCorta}" />
                    </DataTemplate 
                     >
                </ListView.ItemTemplate>
            </ListView>


            <Button x:Name="btnBorrar" Text="Borrar" Clicked="botonBorrar" BackgroundColor="PaleVioletRed"/>

            <Button x:Name="botonMapas" Text="Ver Mapa" Clicked="btnMapsClicked" BackgroundColor="ForestGreen"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>